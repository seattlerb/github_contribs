#!/usr/bin/env ruby -ws

$v ||= false

require "github_contribs"

if ARGV.empty? then
  abort "usage: github_contribs <username> [year]"
end

name = ARGV.shift
last = (ARGV.shift || (Time.now.year - 10)).to_i

gh = GithubContribs.new

File.open "#{name}.html", "w" do |io|
  gh.generate name, last, io
end
